<h1>All Flats</h1>
<div class="m-3">
  <p>  <%= @flats.count %> results</p>
</div>

<div class="d-flex justify-content-around flex-wrap" style="width: 100vw">
<% @flats.each do |flat| %>
<div class="card d-flex flex-grow m-1" >
  <img src="https://loremflickr.com/320/240/house" class="card-img-top p-2" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= flat.name %></h5>
    <p class="card-text"><%= flat.address %> | <i class="fas fa-dollar-sign"></i>
    <%= flat.price_per_night %> | <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>

    <a href="#" class="btn btn-primary">More info</a>
  </div>
</div>
<% end %>
</div>
